<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/green_400"
        android:layout_width="match_parent"
        android:layout_height="83dp">
        <ImageView
            android:id="@+id/icMenu"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/icon_menu"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Trang chủ"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/icAvatar"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/icon_avatar"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/icCart"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/icon_cart"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:background="@drawable/mysearch"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="44dp"
        app:iconifiedByDefault="false"
        app:queryHint="Tìm kiếm đồ ăn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="18dp"
        android:text="Danh mục sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="18dp"
            android:text="Hôm nay bạn muốn ăn gì?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/icon_sale"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="18dp"
        android:text="Có thể bạn thích"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</ScrollView>